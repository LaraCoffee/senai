    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        JButton btnCadastrar = new JButton("Cadastrar");
        btnCadastrar.addActionListener(new ActionListener()){
            public void actionPerformed(ActionEvent arg0){
                Cliente cliente = new Cliente();
                cliente.setNome(jTextField1.getText());
                cliente.setEmail(jTextField2.getText());
                JOptionPane.showMessageDialog(null, cliente.salvar());
               
                
            }
        });
        btnCadastrar.setBounds(199,99,89,23);
        frame.getContentPane().add(btnCadastrar);
    }                                        

    private void jTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        jTextField1 = new JTextField();
        jTextField1.setBounds(57,43,231,20);
        frame.getContentPane().add(jTextField1);
        jTextField1.setColumns(10);
    }                                           

